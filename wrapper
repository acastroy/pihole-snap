#!/bin/sh

set -e

CONFIGDIR="$SNAP_COMMON/etc/pihole/"
LOGDIR="$SNAP_COMMON/var/log/"
SOCKDIR="$SNAP_COMMON/var/run/pihole/"
if [ ! -f $CONFIGDIR/dnsmasq.conf ]; then
  echo "not found"
  mkdir -p $CONFIGDIR
  mkdir -p $LOGDIR
  mkdir -p $SOCKDIR
  cp $SNAP/configs/* $CONFIGDIR/
fi
while :; do
    if [ -e "$CONFIGDIR" ]; then
        $SNAP/bin/pihole-FTL
    fi
    sleep 5
done

